{
  "name": "bccampus/tlpd",
  "description": "Theme and functionality to support Teaching and Learning Professional Development",
  "type": "wordpress-theme",
  "version": "1.3.0",
  "homepage": "https://github.com/bccampus/tlpd",
  "authors": [
    {
      "name": "Brad Payne",
      "homepage": "https://github.com/bdolor"
    },
    {
      "name": "Alex Paredes",
      "homepage": "https://github.com/alex-418"
    }
  ],
  "config": {
    "platform": {
      "php": "7.1"
    }
  },
  "require": {
    "php": ">=7.1"
  },
  "require-dev": {
    "humanmade/coding-standards": "^0.5.0",
    "fig-r/psr2r-sniffer": "^0.5.0",
    "squizlabs/php_codesniffer": "^3.3.2",
    "phpunit/phpunit": "^6.5.13"
  },
  "scripts": {
    "test": [
      "@standards"
    ],
    "standards": [
      "vendor/bin/phpcs --standard=phpcs.ruleset.xml ."
    ]
  }
}
